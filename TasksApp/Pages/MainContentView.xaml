<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="TasksApp.Pages.MainContentView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Padding="10"
            BackgroundColor="#1e1e1e"
            Spacing="10">
            <!--  Темный фон  -->

            <!--  Прокручиваемый контейнер для задач  -->
            <VerticalStackLayout
                x:Name="TasksContainer"
                Padding="10"
                Spacing="20">
                <!--  Здесь будут динамически добавляться блоки задач  -->
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
